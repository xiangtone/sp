<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="Quartzs">
	<typeAlias alias="dto" type="org.eredlab.g4.ccl.datastructure.impl.BaseDto"/>
		<select id="queryQuartzs" parameterClass="map" resultClass="dto">
					 <![CDATA[
					   select threadNum,
					          threadName,
					          state,
					          remark
					   from smscompanymts.quartzs       
				     ]]>
		</select>
	<update id="updateQuartzs" parameterClass="dto">
      update smscompanymts.quartzs
		<dynamic prepend="SET"> 
			<isNotNull property="state">
	         state = #state#
			</isNotNull>	
		</dynamic> 
	        WHERE threadNum=#threadNum# 
	</update>
</sqlMap>
